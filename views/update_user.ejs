<!--header -->
<%- include("include/_header") %>
<!-- update user -->
<div class="holder">
  <a href="/">
    <h2>List Users</h2>
  </a>
  <div class="form">
    <h3>Update VOLU<span>N</span>TEER!</h3>
    <form id="updateUser" method="POST" action="/api/users" class="_form" autocomplete="off">
      <div class="fields">
        <div class="_name">
          <!-- <label for="name">Name : </label> -->
          <input type="hidden" name="id" value="<%= user.id%>" />
          <input type="text" name="name" id="name" placeholder="Name" value="<%= user.name%>" />
        </div>
        <div class="_age">
          <!-- <label for="age">Age : </label> -->
          <input type="number" name="age" id="age" placeholder="Age" value="<%= user.age%>" />
        </div>
        <div class="_livein">
          <!-- <label for="linvein">Address : </label> -->
          <input type="text" name="address" id="livein" placeholder="address" value="<%= user.address%>" />
        </div>
        <div class="_phone">
          <!-- <label for="phone">Phone : </label> -->
          <input type="text" name="phone" id="phone" placeholder="+249 12 345 6789" value="<%= user.phone%>" />
        </div>
        <div class="submitbotton">
          <button type="submit">Save</button>
          <!-- <input type="submit" value="save" /> -->
        </div>
      </div>
    </form>
  </div>
</div>
<script></script>

